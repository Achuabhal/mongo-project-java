<table class="table">
  <thead>                          <!-- ithil routerill nin products varunonu --> 
    <tr>

      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">descrpition</th>
      <th scope="col">image</th>                
      <!-- !ithh admin router te kayill nin varune (SAME LIKE USER CONNECTION WITH INDEX) --> 
    </tr>
  </thead>
  <tbody>
    <tr>
        {{#each products}}
      <th scope="row">{{this.productName}}</th>
      <td>{{this.productCategory}}</td>
      <td>{{this.productDescription}}</td>
      <td><img style="width:50px;height:50px;" src="/product-images/{{this._id}}.jpg"></td>
     
    </tr>
    {{/each}}
  </tbody>
</table>